<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.github.michaljaz.messenger.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_register"
            app:destination="@id/registerFragment"
            app:enterAnim="@anim/slide_out_right"
            app:exitAnim="@anim/slide_in_right"
            app:popEnterAnim="@anim/slide_out_left"
            app:popExitAnim="@anim/slide_in_left" />
        <action
            android:id="@+id/login"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.github.michaljaz.messenger.RegisterFragment"
        android:label="fragment_register"
        tools:layout="@layout/fragment_register" >
        <action
            android:id="@+id/action_login"
            app:destination="@id/loginFragment"
            app:enterAnim="@anim/slide_out_left"
            app:exitAnim="@anim/slide_in_left"
            app:popEnterAnim="@anim/slide_out_right"
            app:popExitAnim="@anim/slide_in_right" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.github.michaljaz.messenger.HomeFragment"
        android:label="home_fragment"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/logout"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/search_on"
            app:destination="@id/search"
            app:enterAnim="@anim/fragment_open_enter" />
        <action
            android:id="@+id/userChat_on"
            app:destination="@id/userChat" />
    </fragment>
    <fragment
        android:id="@+id/search"
        android:name="com.github.michaljaz.messenger.SearchFragment"
        android:label="search"
        tools:layout="@layout/fragment_search" >
        <action
            android:id="@+id/search_off"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/userChat"
        android:name="com.github.michaljaz.messenger.ChatFragment"
        android:label="userchat"
        tools:layout="@layout/fragment_chat" >
        <action
            android:id="@+id/userchat_off"
            app:destination="@id/homeFragment" />
    </fragment>
</navigation>